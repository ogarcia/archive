{
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"scripts/base.sh",
				"scripts/vagrant.sh",
				"scripts/clean.sh"
			]
		}
	],
	"builders": [
		{
			"type": "virtualbox-iso",
			"boot_command": [
				"<enter><wait10><wait10><wait10>",
				"fdisk /dev/sda<enter>",
				"n<enter><enter><enter><enter>+512M<enter>",
				"n<enter><enter><enter><enter>+2G<enter>",
				"n<enter><enter><enter><enter><enter>",
				"t<enter>2<enter>82<enter>w<enter>",
				"echo root:toor | chpasswd<enter>",
				"systemctl start sshd<enter>"
			],
			"headless": false,
			"boot_wait": "10s",
			"disk_size": 51200,
			"guest_additions_mode": "disable",
			"guest_os_type": "ArchLinux_64",
			"iso_checksum": "6d95a2a35e29b23d6abd30011c6ab8220250efb6",
			"iso_checksum_type": "sha1",
			"iso_url": "http://mirror.rackspace.com/archlinux/iso/2015.10.01/archlinux-2015.10.01-dual.iso",
			"ssh_username": "root",
			"ssh_password": "toor",
			"ssh_port": 22,
			"ssh_wait_timeout": "10000s",
			"shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'"
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "archlinux-{{isotime \"200601\"}}-x64-1.0.box"
		}
	]
}
