{
  "variables": {
    "isochecksum": null,
    "isochecksumtype": null,
    "isourl": null
  },
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"scripts/base.sh",
				"scripts/vagrant.sh",
				"scripts/clean.sh"
			]
		}
	],
	"builders": [
		{
			"type": "virtualbox-iso",
			"boot_command": [
				"<enter><wait10><wait10><wait10>",
				"fdisk /dev/sda<enter>",
				"n<enter><enter><enter><enter>+512M<enter>",
				"n<enter><enter><enter><enter>+2G<enter>",
				"n<enter><enter><enter><enter><enter>",
				"t<enter>2<enter>82<enter>w<enter>",
				"echo root:toor | chpasswd<enter>",
				"systemctl start sshd<enter>"
			],
			"headless": false,
			"boot_wait": "10s",
			"disk_size": 51200,
			"guest_additions_mode": "disable",
			"guest_os_type": "ArchLinux_64",
			"iso_checksum": "{{user `isochecksum`}}",
			"iso_checksum_type": "{{user `isochecksumtype`}}",
			"iso_url": "{{user `isourl`}}",
			"ssh_username": "root",
			"ssh_password": "toor",
			"ssh_port": 22,
			"ssh_wait_timeout": "10000s",
			"shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'"
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "archlinux-x64-{{isotime \"200601\"}}.box"
		}
	]
}
